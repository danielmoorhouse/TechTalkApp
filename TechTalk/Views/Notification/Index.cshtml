@model IEnumerable<TechTalk.Data.Models.Notification>

    <div class="inner-wrapper">
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
          
            <div class="post tight">
                <div class="post__top">
                    <a href="@Url.Action("Detail", "Profile", new { @id = item.FromUser.Id })">
                        
                    </a>
                    <a href="@Url.Action("Detail", "Profile", new { @id = item.FromUser.Id})" class="post__user">
                        @item.FromUser.UserName
                    </a>
                    <time title="@item.Timestamp.ToString("D")">@item.Timestamp.ToString();</time>

                    <p class="message">@item.Message</p>
                </div>
            </div>
        }
    }
    else
    {
        <p>Nothing to see here.</p>
    }
</div>
