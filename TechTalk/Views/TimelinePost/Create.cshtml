@model TechTalk.Models.TimelinePost.NewTimelinePostModel

<h1>New Post</h1>
<div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
<form asp-action="AddPost" method="post" id="addPostForm">

    <div class="form-group">
  <h4 style="color: #5ee9d6; background-color: #2c2929; padding: 1.5%;"> Posting as @Model.AuthorName </h4> 
    </div>
    <div class="form-group">
        
        <textarea asp-for="Content" class="form-control" placeholder="Your message here......"></textarea>
    </div>
    <button type="submit" id="submitPostBtn" class="btn btn-submitPost" style="background-color: #5ee9d6;">Submit Post</button>
    </form>
    </div>
    </div>
